{
    "update.mode": "none",
    "chat.disableAIFeatures": true,
    "security.workspace.trust.enabled": false,
    "telemetry.telemetryLevel": "off",
    "breadcrumbs.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.editor.wrapTabs": false,
    "workbench.tree.indent": 20,
    "workbench.secondarySideBar.showLabels": false,
    "window.titleBarStyle": "native",
    "workbench.list.smoothScrolling": true,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.editor.editorActionsLocation": "hidden",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.layoutControl.type": "toggles",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.highlightModifiedTabs": false,
    "editor.fontFamily": "JetbrainsMono NF Light",
    // "editor.lineHeight": 1.2,
    "editor.accessibilitySupport": "off",
    "editor.smoothScrolling": true,
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "line",
    "editor.roundedSelection": false,
    "editor.renderControlCharacters": false,
    "editor.occurrencesHighlight": "off",
    "editor.guides.indentation": false,
    "editor.linkedEditing": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.insertSpaces": true,
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.cursorBlinking": "phase",
    "editor.showFoldingControls": "mouseover",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.overviewRulerBorder": false,
    "editor.formatOnPaste": false,
    "editor.lightbulb.enabled": "off",
    "editor.links": false,
    "editor.wordWrap": "on",
    "editor.minimap.renderCharacters": false,
    "problems.decorations.enabled": false,
    "files.autoSave": "afterDelay",
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.exclude": {
        "**/.localized": true,
        "**/__pycache__": true
    },
    "files.associations": {
        ".clang*": "yaml",
    },
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorStyleInactive": "none",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.showLinkHover": true,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.stickyScroll.enabled": false,
    "explorer.confirmDelete": false,
    "explorer.confirmPasteNative": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    "explorer.compactFolders": false,
    "explorer.autoReveal": false,
    "git.enabled": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.decorations.enabled": true,
    "git.openRepositoryInParentFolders": "never",
    "extensions.ignoreRecommendations": true,
    "settingsSync.ignoredExtensions": [
        "ms-vscode-remote.remote-wsl",
        "ms-vscode.cmake-tools",
        "ms-vscode.js-debug-companion",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml"
    ],
    // web lsp
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "never",
    "javascript.autoClosingTags": true,
    "javascript.suggest.enabled": true,
    "[css]": {
        "editor.tabSize": 2,
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[vue]": {
        "editor.defaultFormatter": "Vue.volar",
        "editor.tabSize": 2
    },
    // python lsp
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.typeCheckingMode": "standard",
    "python.terminal.activateEnvironment": true,
    // c/cpp lsp
    "clangd.path": "clangd",
    "clangd.arguments": [
        "--compile-commands-dir=build",
        "--background-index",
        "--header-insertion=never",
        "--completion-style=detailed",
        "--all-scopes-completion",
        "--log=error",
        "--function-arg-placeholders",
        "--suggest-missing-includes",
        "--fallback-style=LLVM",
        "--enable-config",
        // "--query-driver=*"
    ],
    "clangd.checkUpdates": false,
    "clangd.enableCodeCompletion": true,
    "lldb.suppressUpdateNotifications": true,
    // build tool
    "cmake.configureOnOpen": false,
    "cmake.allowUnsupportedPresetsVersions": true,
    "cmake.parallelJobs": 12,
    "cmake.options.statusBarVisibility": "hidden",
    "xmake.debugConfigType": "codelldb",
    "xmake.compileCommandsDirectory": "build",
    // custom ui css
    "custom-ui-style.electron": {
        "frame": false,
        "transparent": true,
        "vibrancy": "under-window", // fullscreen-ui, sidebar
        "backgroundColor": "#00000000",
        "visualEffectState": "active",
        "backgroundMaterial": "mica",  // acrylic, mica
    },
    "custom-ui-style.font.sansSerif": "JetbrainsMono NF Light",
    "custom-ui-style.stylesheet": {
        "body > .monaco-workbench": " background-color: initial;",
        ".notification-toast": "box-shadow: none !important",
        ".quick-input-widget.show-file-icons": "box-shaodw: none !important",
        ".quick-input-widget": "top: 25vh !important",
        ".quick-input-list .scrollbar": "display: none",
        ".monaco-action-bar.quick-input-inline-action-bar": "display: none",
        ".editor-widget.find-widget": "boxshaodw: none; border-radius: 4px",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title.title-border-bottom:after": "display: none",
        ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",
        ".monaco-list-row.focused": "outline: none !important",
        ".monaco-editor .scroll-decoration": "display: none",
        ".monaco-split-view2>.sash-container>.monaco-sash::before": "display: none !important",
        ".monaco-split-view2>.sash-container>.monaco-sash.horizontal": "height: 2px; color: transparent !important;",
        ".monaco-workbench .part.panel.bottom .composite.title": "border-width: 0.5px;",
        ".monaco-editor .find-widget .monaco-sash.vertical": "display: none",
        ".monaco-workbench .part>.title>.title-label": "padding-left: 5px",
        ".monaco-workbench .part.editor>.content .editor-group-container>.title .tabs-container>.tab.active.tab-border-top:not(:focus)>.tab-border-top-container, .monaco-workbench .part.editor>.content .editor-group-container>.title .tabs-container>.tab.selected.tab-border-top:not(:focus)>.tab-border-top-container": "display: none !important",
        ".monaco-workbench .pane-composite-part>.title>.composite-bar-container>.composite-bar>.monaco-action-bar .action-item .active-item-indicator, .monaco-workbench .pane-composite-part>.header-or-footer>.composite-bar-container>.composite-bar>.monaco-action-bar .action-item .active-item-indicator::before": "display: none",
        ".monaco-workbench .pane>.pane-body .welcome-view-content": "outline: none",
        ".monaco-workbench .part.editor>.content .editor-group-container>.title>.tabs-and-actions-container>.monaco-scrollable-element .scrollbar": "display: none;",
        ".monaco-scrollable-element>.scrollbar>.slider": "display: none;",
        ".monaco-workbench .part.editor>.content .editor-group-container>.title .tabs-container>.tab.active.tab-border-bottom>.tab-border-bottom-container": "display: none !important;",
        ".monaco-workbench .part.sidebar .title-actions .actions-container": "display: none;",
        ".monaco-workbench .part.sidebar > .title,.monaco-workbench .part.editor > .content .editor-group-container > .title .tabs-container": "app-region: drag;",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title .tabs-container > .tab": "app-region: no-drag;",
    },
    
    "workbench.colorCustomizations": {
        // 这里一旦透明掉当前行的焦点框则行首必然显现出白色系统焦点光标无法移除,不知道怎么搞
        // "focusBorder": "#FF678100", 
        "editorCursor.foreground": "#FF6781",
        "welcomePage.background": "#00000000",
        "walkThrough.embeddedEditorBackground": "#00000000",
        "editorGroup.emptyBackground": "#00000000",
        "editor.background": "#00000000",
        "editorGroupHeader.tabsBackground": "#00000000",
        "editorGroupHeader.noTabsBackground": "#00000000",
        "editorHoverWidget.background": "#1D1C1EF0",
        "editorSuggestWidget.background": "#1D1C1EF0",
        "editorHoverWidget.border": "#FF6781",
        "editor.lineHighlightBorder": "#00000000",
        "editor.lineHighlightBackground": "#00000000",
        "editor.compositionBorder": "#00000000",
        "editor.selectionHighlightBorder": "#00000000",
        "editorStickyScroll.background": "#1D1C1EAF",
        "editorStickyScrollGutter.background": "#1D1C1EF0",
        "terminalStickyScroll.background": "#1D1C1EF0",
        // button
        "button.background": "#1D1C1E70",
        "button.hoverBackground": "#1D1C1EF0",
        // tab
        "tab.border": "#00000000",
        "tab.hoverBackground": "#1D1C1EF0",
        // Side Bar / Activity Bar
        "sideBar.border": "#1D1C1EF0",
        "sideBar.background": "#00000000",
        "sideBarSectionHeader.background": "#00000000",
        "sideBarStickyScroll.background": "#1D1C1EAF",
        "activityBar.background": "#00000000",
        "activityBar.inactiveForeground": "#00000000",
        // Panel（终端 / 输出 / 调试控制台）
        "panel.background": "#00000000",
        "panel.border": "#1D1C1EF0",
        "terminal.background": "#00000000",
        // 状态栏
        "statusBar.background": "#00000000",
        "statusBar.noFolderBackground": "#00000000",
        "statusBar.debuggingBackground": "#00000000",
        "statusBar.border": "#00000000",
        "statusBar.focusBorder":"#00000000",
        // Tab
        "tab.activeBackground": "#00000000",
        "tab.inactiveBackground": "#00000000",
        "tab.unfocusedActiveBackground": "#00000000",
        "tab.unfocusedInactiveBackground": "#00000000",
        // 下拉 / 弹窗
        "dropdown.background": "#00000000",
        "menu.background": "#1D1C1E50",
        "quickInput.background": "#1D1C1EF0",
        // 所有输入框（包括搜索栏）
        "input.background": "#00000030",
        "inputOption.activeBackground": "#1D1C1EF0",
        // 搜索 / 查找小浮窗（Ctrl+F / Cmd+F）
        "editorWidget.background": "#1D1C1EF0",
        "editorWidget.border": "#FF6781",
        "notifications.background": "#1D1C1EF0",
        "notifications.border": "#FF6781",
        // 侧边栏选中行背景
        "list.activeSelectionBackground": "#00000020", // 被选中行背景
        "list.inactiveSelectionBackground": "#00000000", // 非焦点时选中行背景
        "list.focusBackground": "#00000020", // 聚焦行背景
        "list.hoverBackground": "#00000000" // 鼠标悬停背景
    },
    // others
    "remote.autoForwardPortsSource": "hybrid",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "oneDarkPro.bold": false,
    "oneDarkPro.italic": true,
    "oneDarkPro.vivid": true,
    "workbench.colorTheme": "One Dark Pro Flat",
}
